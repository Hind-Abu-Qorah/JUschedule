        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/trans</item>
        <item name="colorSecondaryVariant">@color/trans</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
